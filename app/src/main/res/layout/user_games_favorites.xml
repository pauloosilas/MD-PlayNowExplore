<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="@dimen/card_profile_heigth"
    android:id="@+id/user_gameslist"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_profile_heigth"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pd_prof_inf_Left"
        android:paddingRight="@dimen/pd_prof_inf_Left"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Continue Playing"

                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:text="MORE"
                    android:theme="@style/btnStyle"
                    />


            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_imageGame"
                android:src="@drawable/plantsvsz"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>